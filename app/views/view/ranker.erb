<div class="row">
  <div class="span7">
    <h2>Caller's Ranking : <%= divided_date(@gvdate) %></h2>
  </div>
  <div class="span5">
    <%= render 'menu' %>
  </div>
</div>
<div class="row">
  <div class="span12">
    <hr/>
  </div>
</div>
<div class="row">
  <div class="span6">
    <%= render 'ranking', guilds: @guilds, link: true %>
  </div>
</div>
<% before = before_view_date(@gvdates, @gvdate); after = after_view_date(@gvdates, @gvdate) %>
<div class="row">
  <div class="span12 text-center">
    <div class="btn-toolbar">
      <div class="btn-group">
        <% if before %>
          <%= link_to raw("&laquo; #{divided_date(before)}"), ranker_path(before), :class => "btn btn-primary" %>
        <% else %>
          <button class="btn disabled">&laquo &nbsp;&nbsp;&nbsp;Prev&nbsp;&nbsp;&nbsp;</button>
        <% end %>
      </div>
      <div class="btn-group">
        <%= link_to "Top", root_path, :class => "btn btn-info" %>
      </div>
      <div class="btn-group">
        <% if after %>
        <%= link_to raw("#{divided_date(after)} &raquo;"), ranker_path(after), :class => "btn btn-primary" %>
        <% else %>
          <button class="btn disabled">&nbsp;&nbsp;&nbsp;Next&nbsp;&nbsp;&nbsp; &raquo;</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
