<table class="table table-striped  table-condensed">
  <thead>
    <tr>
      <th class="span1">Rank</th>
      <th class="span3">Guild</th>
      <th class="span1">Total</th>
    </tr>
  </thead>
  <tbody>
    <% each_rankers_for_view(guilds) do |vrank, guild| %>
      <tr>
        <td><%= vrank %></td>
        <td>
          <% if link && !guild.ruled.empty? %>
            <span class="guild-name" rel="tooltip" title="<%= guild.ruled.keys.sort.join(',') %>">
              <%= link_to guild.guild_name, result_path(guild.gvdate) %>
            </span>
          <% else %>
            <%= guild.guild_name %>
          <% end %>
        </td>
        <td><%= guild.called_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
